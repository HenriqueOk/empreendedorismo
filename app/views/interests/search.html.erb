<div class="well">
  <%= form_tag search_interests_path, method: :get do %>
    <div class='row'>
      <div class="col-sm-4">
        <%= text_field_tag(:by_format, params[:by_format], placeholder: 'Formato', class: 'form-control') %>
      </div>
      <div class="col-sm-4">
        <%= text_field_tag(:by_local, params[:by_local], placeholder: 'Local', class: 'form-control') %>
      </div>
      <div class="col-sm-4">
        <%= submit_tag "Filtrar", class: "btn btn-primary pull-right", style: 'min-width: 225px;height: 34px;' %>
      </div>
    </div>
  <% end %>
</div>

<table class="table">

  <thead>
    <th>Jogador</th>
    <th>Formato</th>
    <th>Local</th>
    <th>Data e Hora</th>
    <th></th>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <th><%= interest.user.name %></th>
        <th><%= interest.format %></th>
        <th><%= interest.local %></th>
        <th><%= interest.datetime %></th>
        <th>
          <% if interest.participants.include?(current_user) %>
            <%= link_to 'Perdi o interesse', participate_interest_path(interest), method: :delete, class: 'btn btn-danger'%>            
          <% else %>
            <%= link_to 'Participar', participate_interest_path(interest), method: :put, class: 'btn btn-success'%>
          <% end %>
        </th>
      </tr>
    <% end %>
  </tbody>

</table>
